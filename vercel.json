{
  "rewrites": [
    {
      "source": "/((?!api|_next|static|favicon\\.svg|robots\\.txt|sitemap\\.xml|ai-info\\.html|og-image\\.png).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/ai-info.html",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        },
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
